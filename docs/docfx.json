{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**.csproj"
          ],
          "src": "../src"
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "concepts/**.md",
          "concepts/**/toc.yml"
        ]
      },
      {
        "files": [
          "samples/**.md",
          "samples/**/toc.yml"
        ]
      },
      {
        "files": [
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "Silverback",
      "_appLogoPath": "images/logo.png",
      "_appFooter": "Â© 2020 Sergio Aquilini",
      "_enableSearch": "true",
      "_gitContribute": {
        "repo": "https://github.com/beagle1984/silverback",
        "branch": "master",
        "apiSpecFolder": "docs-ref-overwrite"
      }
    },
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "_templates/silverback"
    ],
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "sitemap": {
      "baseUrl": "https://silverback-messaging.net",
      "priority": 0.5,
      "changefreq": "weekly"
    }
  }
}
